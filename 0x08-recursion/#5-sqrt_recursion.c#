#include "main.h"

/**
 *_sqrt_recursion - returns the natural square root of a number if one exists
 *@n:  number
 *Return: -1 if no natural squareroot is available
 */


int _sqr(int n, int a)
	a*a - 2*a + 1) >= n)  (a*a - 2*a + 1: -1);
int _sqrt_recursion(int n)
{
	int a = n/2;
	if ( n == 0)
		return (0);
	if ( n < 0 )
		return (-1);
	else if ( _sqr(n, a) == n)
		return (a - 1);
	else if (_sqr(n,a) > n)
		return _sqr(n, a - 1);
}
